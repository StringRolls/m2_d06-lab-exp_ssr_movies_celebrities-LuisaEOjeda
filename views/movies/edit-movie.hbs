<h2>Edit the movie information</h2>

<form action="/movies/{{movie._id}}/edit">

    <label for="title"> Title:</label>
    <input type="text" name="title" value="{{movie.title}}">

    <label for="genre"> Genre:</label>
    <input type="text" name="genre" value="{{movie.genre}}">

    <label for="plot"> Plot:</label>
    <input type="text" name="plot" value="{{movie.plot}}">

    <label for="cast"> Cast:</label>
    <select name="cast" multiple>
        
    {{#each celebrities.celebrities}}
        <option value="{{_id}}">{{name}}</option>
    {{/each}}
    </select>

    <button type="submit">Edit</button>
    <br>
    <a href="/movies">Go back to movies</a>
</form>